<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp">

    <ImageButton
        android:id="@+id/first_letter_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/device_state_switch"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/name_text_view"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/first_letter_image_view"
        android:layout_toStartOf="@+id/device_state_switch"
        android:text="@string/device"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/device_type_text_view"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text_view"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/first_letter_image_view"
        android:text="Type"
        android:textColor="@color/colorSecondaryText" />

    <Switch
        android:id="@+id/device_state_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>