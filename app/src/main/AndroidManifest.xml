<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thekolo.de.quicktilesforikeatradfri">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="thekolo.de.quicktilesforikeatradfri.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="thekolo.de.quicktilesforikeatradfri.ui.SettingsActivity"
            android:label="Settings" />

        <activity
            android:name=".ui.IntroActivity"
            android:theme="@style/Theme.Intro" />

        <receiver
            android:name="thekolo.de.quicktilesforikeatradfri.widgets.devices.DevicesAppWidgetProvider"
            android:label="Devices Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/devices_appwidget_info" />
        </receiver>

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.widgets.devices.DevicesWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name="thekolo.de.quicktilesforikeatradfri.widgets.devices.DevicesListViewItemClickedBroadcastReceiver" />

        <receiver
            android:name="thekolo.de.quicktilesforikeatradfri.widgets.groups.GroupsAppWidgetProvider"
            android:label="Groups Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/devices_appwidget_info" />
        </receiver>

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.widgets.groups.GroupsWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name="thekolo.de.quicktilesforikeatradfri.widgets.groups.GroupsListViewItemClickedBroadcastReceiver" />

        <service
            android:name=".widgets.UpdateJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.tileservices.Tile1Service"
            android:icon="@drawable/lightbulb_outline"
            android:label="Tile 1"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.tileservices.Tile2Service"
            android:icon="@drawable/lightbulb_outline"
            android:label="Tile 2"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.tileservices.Tile3Service"
            android:icon="@drawable/lightbulb_outline"
            android:label="Tile 3"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.tileservices.Tile4Service"
            android:icon="@drawable/lightbulb_outline"
            android:label="Tile 4"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name="thekolo.de.quicktilesforikeatradfri.tileservices.Tile5Service"
            android:icon="@drawable/lightbulb_outline"
            android:label="Tile 5"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>